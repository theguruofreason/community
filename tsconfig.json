{
  "compilerOptions": {
    "target": "ESNext",                                  
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "NodeNext",                                
    "rootDir": "src",                                  
    "moduleResolution": "NodeNext",                     
    "baseUrl": "src",                                  
    "paths": {
      "configs": ["./helpers/configs.ts"],
      "db": ["./db.ts"],
      "routes": ["./routes/index.ts"],
      "register": ["./register/index.ts"],
      "login": ["./login/index.ts"],
      "helpers": ["./helpers/index.ts"],
      "errors": ["./helpers/errors.ts"],
      "relationships": ["./relationships/index.ts"],
      "graphQuery": ["./gql/index.ts"],
      "auth": ["./auth/index.ts"]
    },
    "resolveJsonModule": true,                        
    "sourceMap": true,                                
    "outDir": "./dist",                                   
    "sourceRoot": "./src",                                 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": false,                            
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*",
    "environment.d.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
